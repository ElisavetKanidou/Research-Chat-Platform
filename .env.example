# Database Configuration
DATABASE_URL=postgresql+asyncpg://root:your-password-here@db:5432/dbresearch

# PostgreSQL Credentials
POSTGRES_USER=root
POSTGRES_PASSWORD=your-password-here
POSTGRES_DB=dbresearch

# Security
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
EMAIL_RESET_TOKEN_EXPIRE_HOURS=1

# Development
DEBUG=true

# CORS - Frontend URLs (χωρίς εισαγωγικά!)
# For remote access, add your server IP: http://localhost:3001,http://YOUR_SERVER_IP:3001,http://YOUR_SERVER_IP:8090
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3001,http://localhost:8090

# AI Services API Keys
GEMINI_API_KEY=your-gemini-api-key-here
GROQ_API_KEY=your-groq-api-key-here

# OpenAI (Optional)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# GPT-OSS Local AI
GPT_OSS_API_KEY=your-gpt-oss-api-key-here
GPT_OSS_BASE_URL=http://your-server-ip:11481/api/chat/completions
GPT_OSS_MODEL=gpt-oss:120b

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Email (Optional)
EMAIL_FROM=noreply@research-platform.com
EMAIL_FROM_NAME=Research Platform
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# File Upload
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760

# Features
ENABLE_AI_FEATURES=true
ENABLE_ANALYTICS=true
AI_RESPONSE_TIMEOUT=30
MAX_CHAT_HISTORY=50

# OAuth Integrations
GOOGLE_CLIENT_ID=your_client_id
GOOGLE_CLIENT_SECRET=your_client_secret
DROPBOX_APP_KEY=your_app_key
DROPBOX_APP_SECRET=your_app_secret

# Frontend/Backend URLs
FRONTEND_URL=http://localhost:3001

# Frontend API URL (optional - auto-detected if not set)
# Leave empty for auto-detection based on current host
# Or set explicitly for local development: http://localhost:8090/api/v1
VITE_API_URL=
