# ============================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# Copy this file to .env and fill in your values
# ============================================

# ============================================
# DATABASE CONFIGURATION
# ============================================
POSTGRES_DB=research_chat
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD

# ============================================
# BACKEND API CONFIGURATION
# ============================================
SECRET_KEY=CHANGE_THIS_TO_RANDOM_SECRET_KEY_MINIMUM_32_CHARS
API_V1_PREFIX=/api/v1

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# ============================================
# AI SERVICE API KEYS
# ============================================
# Google Gemini
GEMINI_API_KEY=your_gemini_api_key_here

# Groq
GROQ_API_KEY=your_groq_api_key_here

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# GPT-OSS (120B Model)
GPT_OSS_API_KEY=your_gpt_oss_api_key_here
GPT_OSS_BASE_URL=http://your-gpt-oss-server:port/v1

# ============================================
# EMAIL SERVICE - Resend
# ============================================
RESEND_API_KEY=re_your_resend_api_key_here
EMAIL_FROM=onboarding@resend.dev
EMAIL_FROM_NAME=Research Platform

# ============================================
# OAUTH INTEGRATIONS
# ============================================
# Google Drive
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Dropbox
DROPBOX_APP_KEY=your_dropbox_app_key
DROPBOX_APP_SECRET=your_dropbox_app_secret

# Mendeley
MENDELEY_CLIENT_ID=your_mendeley_client_id
MENDELEY_CLIENT_SECRET=your_mendeley_client_secret

# ============================================
# FRONTEND CONFIGURATION
# ============================================
# Frontend URL (for OAuth redirects and CORS)
FRONTEND_URL=http://localhost:3000
# For production, change to: https://yourdomain.com

# API URL for frontend (Vite build-time variable)
VITE_API_URL=http://localhost:8080/api/v1
# For production, change to: https://yourdomain.com/api/v1

# ============================================
# DOCKER PORTS (customize if needed)
# ============================================
# Frontend port (default: 3000)
FRONTEND_PORT=3000

# Backend port (default: 8080)
BACKEND_PORT=8080

# Database port (internal only, not exposed)
# POSTGRES_PORT=5432
